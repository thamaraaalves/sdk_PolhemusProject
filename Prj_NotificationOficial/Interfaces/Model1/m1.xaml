<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Model2="clr-namespace:Prj_NotificationOficial.Interfaces.Model2" x:Class="Prj_NotificationOficial.Interfaces.Model1.m1" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid VerticalAlignment="Stretch" Margin="0 0 10 10" >
        <Ellipse Fill="#2c271f" HorizontalAlignment="Left" Height="100" Margin="53,50,0,0" Stroke="Black" VerticalAlignment="Top" Width="100">
            <Ellipse.Effect>
                <DropShadowEffect/>
            </Ellipse.Effect>
        </Ellipse>
        <Image Source="images/eye.png" HorizontalAlignment="Left" Height="100" Margin="53,50,0,0" VerticalAlignment="Top" Width="100">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Button Name="btnExit" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="X" HorizontalAlignment="Left" Margin="141,10,0,0" VerticalAlignment="Top" Width="39" Height="35" Foreground="Red" Click="btnExit_Click"/>
    </Grid>
</UserControl>
